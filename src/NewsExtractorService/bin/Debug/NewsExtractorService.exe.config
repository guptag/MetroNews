<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="NewsFeedConfigurationFullPath" value="~\\NewsFeedConfiguration.xml"/> <!-- ~ will be replaced in the code with current directory -->
    <add key="OutputFilePath" value="~\\Content\\"/>   <!-- ~ will be replaced in the code with current directory -->
    <add key="LogFilePath" value="~\\Logs\\"/>   <!-- ~ will be replaced in the code with current directory -->
    <add key="RefreshContentInMSec" value="1800000"/> <!-- refresh in every 30 minutes -->    
  </appSettings>
  <startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup>
</configuration>
